<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#77000000"
    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@color/blue_kuaidi100" 
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp">
        <TextView 
            android:id="@+id/btn_express_pop_search_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:layout_alignParentRight="true"
           	android:textColor="#ffffff"
           	android:textSize="20sp"
           	android:layout_centerVertical="true"
           	android:layout_marginRight="10dp"
           	android:layout_marginLeft="10dp"
            />
        <EditText 
            android:id="@+id/et_express_pop_search"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toLeftOf="@id/btn_express_pop_search_cancle"
            android:background="@drawable/editor_bg"
            android:layout_marginRight="5dp"
            android:hint="快速搜索快递公司"
            android:paddingLeft="2dp"
            />
    </RelativeLayout>
	<ListView 
	    android:id="@+id/listView_express_pop_search"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    />
</LinearLayout>