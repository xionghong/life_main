<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="25dp"
    android:paddingTop="30dp" 
    android:paddingRight="20dp"
    android:background="@drawable/widget_4x2_rain">

    <LinearLayout
        android:id="@+id/item_page_temGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    </LinearLayout>

    <TextView
        android:id="@+id/item_page_weatherTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/item_page_temGroup"
        android:layout_below="@+id/item_page_temGroup"
        android:textColor="#ffffff"
        android:textSize="23sp"
        android:layout_marginTop="5dp"
        android:text="阴" />

    <TextView
        android:id="@+id/item_page_windTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/item_page_weatherTv"
        android:layout_below="@+id/item_page_weatherTv"
        android:layout_marginTop="5dp"
         android:textColor="#ffffff"
        android:textSize="16sp"
        android:text="西南风，风力3级" />

    <View
        android:id="@+id/item_page_line"
        android:layout_width="150dp"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/item_page_windTv"
        android:layout_below="@+id/item_page_windTv"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_line" />

    <TextView
        android:id="@+id/item_page_publishTimeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/item_page_line"
        android:layout_below="@+id/item_page_line"
        android:layout_marginTop="15dp"
         android:textColor="#ffffff"
        android:textSize="13sp"
        android:text="上次刷新时间:7月5日 01:33:44" />

    <ImageButton
        android:id="@+id/item_page_updateBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="fitStart"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/item_page_temGroup"
        android:background="#00000000"
        android:src="@drawable/ic_popup_sync_1"/>

</RelativeLayout>