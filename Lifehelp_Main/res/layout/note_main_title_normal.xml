<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/title_normal_note_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/sliding_menu_title"
    android:paddingBottom="6dp"
    android:paddingTop="6dp" >

    <Button
        android:id="@+id/newNoteBtn_note_main"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/note_new_btn_selector" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="我的笔记"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <Button
        android:id="@+id/listStyleBtn_note_main"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/note_menu_btn_selector" />

</RelativeLayout>